@page
@model IndexModel
@addTagHelper Website.Middleware.Markdown.TagHelpers.MarkdownTagHelper, Website.Middleware.Markdown.TagHelpers
@{
   ViewData["Title"] = "Home page";
}

<div id="welcome" class="row section-full">
   <div class="container d-flex">
      <div class="text-center my-auto w-100">
         <h1 class="display-1">Welcome</h1>
         <h3 class="display-4 my-4">to my personal development website and blog.</h3>
         
         <a class="my-4" href="#profile"><i class="fas fa-chevron-down fa-lg"></i></a>
      </div>
   </div>
</div>

<div id="profile" class="row section-full section-2">
   <div class="container d-flex">
      <div class="text-center my-auto w-100">
         <h1 class="display-1">About Me</h1>
         <h3 class="display-4 my-4">
            Software developer with over 10 years of commercial experience in all things software from
            desktop to web to cloud.
         </h3>
         <h3 class="my-4"><a asp-page="/About">See my detailed profile, skills and experience</a></h3>
         <a href="#thiswebsite"><i class="fas fa-chevron-down fa-lg"></i></a>
      </div>
   </div>
</div>


<div id="thiswebsite" class="row section-full">
   <div class="container d-flex">
      <div class="text-center my-auto w-100">
         <h1 class="display-1">About This Website</h1>
         <h3 class="my-4">
            How has this site been designed and implemented?
         </h3>
         <div class="container">
            @{ var colDef = "col-xs-12 col-sm-6 col-md-4";}
            <div class="row">
               <div class="@colDef py-4">
                  <a href="https://asp.net/"><strong class="d-block">ASP.NET Core</strong>for server-side rendering</a>
               </div>
               <div class="@colDef py-4">
                  <a href="https://fontawesome.com"><strong class="d-block">Font Awesome</strong>for icons</a>
               </div>
               <div class="@colDef py-4">
                  <a href="https://getbootstrap.com/"><strong class="d-block">Bootstrap 4</strong>for UI layout and styling</a>
               </div>
               <div class="@colDef py-4">
                  <a href="https://git-scm.com/"><strong class="d-block">GIT</strong>for source control</a>
               </div>
               <div class="@colDef py-4">
                  <a href="https://github.com/"><strong class="d-block">GitHub</strong>for hosting and managing source code</a>
               </div>
               <div class="@colDef py-4">
                  <a href="https://github.com/lunet-io/markdig"><strong class="d-block">Markdig</strong>for rendering Markdown to HTML</a>
               </div>
            </div>
         </div>
         <a href="#welcome"><i class="fas fa-level-up-alt fa-lg"></i></a>
      </div>
   </div>
</div>